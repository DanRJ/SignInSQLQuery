package myfirstjdbc;

import java.sql.*;

import db.ConnectToDB;

public class CRUDexample {

	public static void main(String[] args) {
		String bruker = args[0], passord = args[1];
		String query = null;
		
		ConnectToDB db = new ConnectToDB(bruker, passord);
		
		GUISQL test = new GUISQL();
		query = test.query;
		System.out.println(query);
		
		Connection con = null;
		Statement stmt = null;
		
		try {
			con = db.getConnection();
			stmt = con.createStatement();
			create(con, stmt, query);
		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			try { if(stmt != null) stmt.close();} catch (Exception e2) {}
			try { if(con != null) con.close();} catch (Exception e2) {}
		}
	}

	public static void create(Connection con, Statement stmt, String query) {		
		try {
			if (query != null) {
				stmt.executeUpdate(query);
				System.out.println("Success!\n" + query);	
			}
		} catch (SQLException e) {
			e.printStackTrace();
		}
			
			/*try {
				while (rs.next()) {
					System.out.printf("%-10s", rs.getString(1));
					System.out.printf("%-10s%", rs.getString(2));
					System.out.printf("%-10s%", rs.getString(3));
					System.out.printf("%-10s%", rs.getString(4));
					System.out.printf("%-10s%", rs.getString(5));
				}
			} catch (SQLException e) {
				e.printStackTrace();
			} finally {
				if (rs != null) rs.close();
			}*/

	}

}
