package myfirstjdbc;

import javax.swing.*;
import javax.swing.border.Border;

import java.awt.*;
import java.awt.event.*;

public class GUISQL extends JFrame implements ActionListener {
	public enum LoginState {
		LOGIN, BAD_LOGIN, GOOD_LOGIN, SQL_VIEW
	}
	private static final long serialVersionUID = 1L;
	
	public LoginState stateLogin;
	public String query, username, password;
	private JPanel jpPanel, jpLogin, jpTest, jpTest2;
	private JTextArea jtaText;
	private JButton jbLogin;
	private JTextField jtfServer, jtfUsername, jtfPassword;
	private JLabel jlServer, jlUsername, jlPassword;
	
	public GUISQL() {
		createGUI();
	}
	
	public void createGUI() {
		setSize(600, 400);
		setLocationRelativeTo(null);
		stateLogin = LoginState.LOGIN;
		switch (stateLogin) {
			case LOGIN:
				System.out.println("LOGIN");
				login();
				break;
			case BAD_LOGIN:
				System.err.println("BADLOGIN");
				break;
			case GOOD_LOGIN:
				System.out.println("GOODLOGIN");
				stateLogin = LoginState.SQL_VIEW;
				break;
			case SQL_VIEW:
				textArea();
				System.out.println("SQL");
				break;
			default:
				jpPanel.add(jtaText, BorderLayout.CENTER);
				break;
		}
	}
	
	public void textArea() {
		jtaText = new JTextArea();
		
		jtaText.addKeyListener(new KeyListener() {
			
			@Override
			public void keyPressed(KeyEvent e) {
				if (e.getKeyCode() == KeyEvent.VK_F5) {
					query = jtaText.getText();
					System.out.println(query);
				}
			}
			@Override
			public void keyReleased(KeyEvent e) {}
			@Override
			public void keyTyped(KeyEvent e) {}
		});
	}
	
	public void login() {
		jbLogin = new JButton("Sign in");
		
		jtfServer = new JTextField(15);	
		jlServer = new JLabel("Server:", JLabel.CENTER);
		
		jtfUsername = new JTextField(15);
		jlUsername = new JLabel("Username:", JLabel.CENTER);
		
		jtfPassword = new JPasswordField(15);
		jlPassword = new JLabel("Password:", JLabel.CENTER);
		
		jpTest = new JPanel(new GridLayout(3, 0));
		jpLogin = new JPanel(new GridLayout(0, 2));
		jpTest2 = new JPanel(new GridLayout(0, 2));
		
		jpLogin.add(jlServer);
		jpLogin.add(jtfServer);
		
		jpLogin.add(jlUsername);
		jpLogin.add(jtfUsername);
		
		jpLogin.add(jlPassword);
		jpLogin.add(jtfPassword);
		
		jpTest.add(jpTest2);
		jpTest.add(jpLogin);
		add(jpTest, BorderLayout.CENTER);
		setVisible(true);
		setTitle("Login Form");
	}
	@Override
	public void actionPerformed(ActionEvent arg0) {
		// TODO Auto-generated method stub
		
	}
	
}
